; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = false
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,lock}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.sql]
indent_style = tab
tab_width = 4

[*.sh]
indent_style = tab

[*.txt]
end_of_line = crlf
indent_style = tab
tab_width = 4

[*.md]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.xml]
indent_style = tab
tab_width = 4

[{Makefile.*,makefile,Makefile,GNUmakefile,*.mk}]
indent_style = tab
tab_width = 4

[COMMIT_EDITMSG]
max_line_length = 0
